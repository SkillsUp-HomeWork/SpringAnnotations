<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="contactsDAO" class="com.ContactsDAO"/>

    <bean id="contactsService" class="com.ContactsServiceImpl" init-method="init">
        <property name="environment" ref="myProperties"/>
        <property name="ContactsDAO" ref="contactsDAO"/>
    </bean>

    <bean id="myProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations" value="classpath:contacts.properties"/>
    </bean>
</beans>